      </div>
      

      </div>
    </form>
    </li>


    <% @recent.each do |e| %>
      <li>
	<span class="username">
	  <%= link_to "@#{e.user.username}", "/#{CGI.escape e.user.username}" %>
	</span>

	<span class="tweet">
	  my
	  <strong>
	    <%= "##{e.place}" %>
